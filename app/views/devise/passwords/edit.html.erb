<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center mt-5">
      <h2>Change your password</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <div class="col-md-4 offset-md-4 mt-5">
        <div class="form-group">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password", class: "mt-3" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Change my password", class: "btn btn-primary text-center" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center mt-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
